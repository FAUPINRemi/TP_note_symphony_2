{
  "name": "todo-app",
  "type": "project",
  "description": "A simple Symfony application for managing tasks.",
  "require": {
    "php": "^7.2.5",
    "symfony/orm-pack": "^1.0",
    "symfony/form": "^5.0",
    "symfony/validator": "^5.0",
    "symfony/twig-bundle": "^5.0",
    "doctrine/annotations": "^1.11",
    "doctrine/doctrine-bundle": "^2.4",
    "doctrine/orm": "^2.8",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "symfony/debug-pack": "^1.0",
    "symfony/maker-bundle": "^1.0",
    "symfony/test-pack": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
      "Symfony\\Bundle\\MakerBundle\\Composer\\ScriptHandler::buildBootstrap": "build",
      "Symfony\\Bundle\\MakerBundle\\Composer\\ScriptHandler::build": "build"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}